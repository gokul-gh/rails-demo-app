<tr id="collegeList_<%= college.id %>">
  <td> <%= college.name %> </td>
  <td> 
    <div class="dropdown">
      <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown"   aria-expanded="false">  
        Action 
      </button> 
      <ul class ="dropdown-menu">  
        <li> <%= link_to "show", college_path(college), class: "dropdown-item", data:{bs_toggle: "modal", bs_target: "#showCollegeModal"}, remote: true %> </li> 
        <li> <%= link_to "edit", edit_college_path(college), class: "dropdown-item", data:{bs_toggle: "modal", bs_target: "#editCollegeModal"}, remote: true %> </li> 
        <li> <%= link_to "destroy", college_path(college), method: :delete, data:{ confirm: "Are you sure to delete this college?", remote: true}, class: "dropdown-item" %> </li>  
      </ul>
    </div>
  </td>
  <td> <%= link_to "list Department", college_departments_path(college, @department), class: "btn btn-secondary" %>
</tr>