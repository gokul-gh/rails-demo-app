<tr id="departmentIndex_<%= department.id %>">
  <td> <%= department.name %> </td>
  <td> <%= department.department_code %> </td>

  <td> <div class="dropdown">
                  <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">Action
    </button>
    <ul class="dropdown-menu">
      <li><%= link_to "show", college_department_path(@college, department), class: "dropdown-item", data:{ bs_toggle: "modal", bs_target: "#showDepartmentModal", remote: true} %> </li>
      <li> <%= link_to "edit", edit_college_department_path(@college, department), class: "dropdown-item", data:{bs_toggle: "modal", bs_target: "#editDepartmentModal", remote: true} %> </li>
      <li> <%= link_to "destroy", college_department_path(@college, department), method: :delete, data:{Confirm:"Are you sure to delete this department?"}, class: "dropdown-item", remote: true %> </li>
    </ul>
  </div> </td>

  <td> <%= link_to "List of students", college_department_students_path(@college, department, @student), class: "btn btn-secondary" %> </td>
</tr>